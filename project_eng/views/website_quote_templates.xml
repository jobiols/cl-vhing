<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="so_quotation_content" inherit_id="website_quote.so_quotation_content">
        <xpath expr="//div[@id='introduction']" position="replace">
            <div >
                <div style="width:100%;
                            border:1px solid black;
                            text-align:center;
                            border-bottom-style:double;
                            font-size:40px;
                            color:rgb(158, 158, 255);">
                            Presupuesto
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('row')]" position="replace">
            <div class="row mt32">
                <div class="col-md-6 col-xs-6">
                    <div class="row">
                        <label class="col-sm-4 col-xs-4 text-right">CLIENTE:</label>
                        <div class="col-sm-8 col-xs-8">
                            <div t-field="quotation.partner_id"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-4 col-xs-4 text-right">OBRA:</label>
                        <div class="col-sm-8 col-xs-8">
                            <div t-field="quotation.work"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-4 col-xs-4 text-right">TIPO DE OBRA:</label>
                        <div class="col-sm-8 col-xs-8">
                            <div t-field="quotation.description"/>
                        </div>
                    </div>

                    <!--
                    <div t-if="quotation.partner_shipping_id.id != quotation.partner_invoice_id.id" class="row">
                        <label class="col-sm-4 col-xs-4 text-right">Ship To:</label>
                        <div class="col-sm-8 col-xs-8">
                            <div t-field="quotation.partner_shipping_id" t-options='{
                              "widget": "contact",
                              "fields": ["address", "name", "phone"]
                              }'/>
                        </div>
                    </div>
                -->
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="row">
                        <label class="col-sm-5 col-xs-5 text-right">NRO. DE PRESUPUESTO:</label>
                        <div class="col-sm-7 col-xs-7">
                            <div t-field="quotation.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-5 col-xs-5 text-right">FECHA:</label>
                        <div class="col-sm-7 col-xs-7">
                            <span t-field="quotation.date_order" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="clearfix"/>
                        <div t-if="quotation.validity_date and quotation.state in ['draft', 'sent']">
                            <label class="col-sm-5 col-xs-5 text-right">VIGENCIA:</label>
                            <div class="col-sm-7 col-xs-7">
                                <span t-field="quotation.validity_date"/>
                            </div>
                        </div>

                        <!--
                        <div class="clearfix"/>
                        <div t-if="quotation.client_order_ref">
                            <label class="col-sm-5 col-xs-5 text-right">Your Reference:</label>
                            <div class="col-sm-7 col-xs-7">
                                <span t-field="quotation.client_order_ref"/>
                            </div>
                        </div>
                        <div class="clearfix"/>
                        <div t-if="quotation.payment_term_id">
                            <label class="col-sm-5 col-xs-5 text-right">Payment Terms:</label>
                            <div class="col-sm-7 col-xs-7">
                                <span t-field="quotation.payment_term_id.note"/>
                            </div>
                        </div>
                    -->
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
